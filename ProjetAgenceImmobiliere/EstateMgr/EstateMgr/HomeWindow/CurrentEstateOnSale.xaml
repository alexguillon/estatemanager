<Page x:Class="EstateMgr.CurrentEstateOnSale"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EstateMgr"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="CurrentEstateOnSale">

    <Grid>


        <Label HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Label.Content>
                <StackPanel Orientation="Vertical">
                    <Label Content="{Binding nbreBienEnVente}" HorizontalAlignment="Center" Foreground="IndianRed" FontSize="225"></Label>
                    <Label Content="biens en vente" Foreground="Black" FontSize="85"></Label>
                </StackPanel>
            </Label.Content>
        </Label>
    </Grid>
</Page>
